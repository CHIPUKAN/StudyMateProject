<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Application Colors -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="Secondary">#7B5CF0</Color>
    <Color x:Key="Tertiary">#A594F9</Color>

    <!-- Functional Colors -->
    <Color x:Key="Success">#00C853</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Danger">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Neutral Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Gray100">#E5E5E5</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- App Theme Colors -->
    <Color x:Key="AppBackgroundColor">White</Color>
    <Color x:Key="AppTextColor">Black</Color>
    <Color x:Key="AppSurfaceColor">#FAFAFA</Color>
    <Color x:Key="AppFrameBorderColor">#C8C8C8</Color>

    <!-- Dark Theme Colors -->
    <Color x:Key="AppBackgroundColorDark">#121212</Color>
    <Color x:Key="AppTextColorDark">White</Color>
    <Color x:Key="AppSurfaceColorDark">#1E1E1E</Color>
    <Color x:Key="AppFrameBorderColorDark">#404040</Color>

</ResourceDictionary>
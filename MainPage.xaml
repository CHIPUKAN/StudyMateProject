<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyMateProject.MainPage"
             Title="StudyMate">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="app_icon.png"
                SemanticProperties.Description="Логотип StudyMate"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Добро пожаловать в StudyMate!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Удобное приложение для создания заметок и управления напоминаниями"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Описание приложения"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Начать работу"
                SemanticProperties.Hint="Открывает главный экран приложения"
                Clicked="OnStartButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyMateTest.MainPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid BackgroundColor="White" Padding="30">

        <ScrollView VerticalOptions="FillAndExpand" 
                    HorizontalOptions="FillAndExpand">

            <StackLayout 
                Padding="25"
                Spacing="30"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="450"
                MaximumWidthRequest="450"
                MinimumWidthRequest="450">

                <!-- Заголовок -->
                <Label Text="StudyMate" 
                       FontSize="68" 
                       FontFamily="Segoe UI Black"
                       FontAttributes="Bold"
                       TextColor="#2E86AB"
                       HorizontalOptions="Center"
                       Margin="0,30,0,40">
                    <Label.Shadow>
                        <Shadow Brush="Black"
                                Offset="2,2"
                                Radius="1"
                                Opacity="0.3" />
                    </Label.Shadow>
                </Label>

                <!-- Кнопки основных функций -->
                <Button Text="Мои тетради"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Segoe UI Black"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#4A90E2"
                        HeightRequest="90"
                        WidthRequest="400"
                        CornerRadius="20"
                        Clicked="OnNotebooksClicked"
                        HorizontalOptions="Center"
                        Margin="0,8" />

                <Button Text="Мои напоминания"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Segoe UI Black"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#4A90E2"
                        HeightRequest="90"
                        WidthRequest="400"
                        CornerRadius="20"
                        Clicked="OnRemindersClicked"
                        HorizontalOptions="Center"
                        Margin="0,8" />

                <Button Text="Калькулятор"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Segoe UI Black"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#4A90E2"
                        HeightRequest="90"
                        WidthRequest="400"
                        CornerRadius="20"
                        Clicked="OnCalculatorClicked"
                        HorizontalOptions="Center"
                        Margin="0,8" />

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
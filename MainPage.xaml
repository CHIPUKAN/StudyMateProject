<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyMateTest.MainPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#A8D8EA" Offset="0.0" />
                <GradientStop Color="#B8E6FF" Offset="0.3" />
                <GradientStop Color="#E6F3FF" Offset="0.6" />
                <GradientStop Color="#FFE6F0" Offset="0.8" />
                <GradientStop Color="#F4C2C2" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout 
                Padding="40,30,40,30"
                Spacing="25"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                MaximumWidthRequest="500">

                <!-- Заголовок -->
                <Label Text="StudyMate" 
                       FontSize="{OnPlatform iOS=52, Android=48, WinUI=56}" 
                       FontFamily="Georgia"
                       FontAttributes="Bold"
                       TextColor="#2E86AB"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10" />

                <!-- Слоган -->
                <Label Text="📚 Твой умный помощник для учёбы! ✨" 
                       FontSize="{OnPlatform iOS=26, Android=24, WinUI=28}" 
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       TextColor="#1B4A5C"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,30" />

                <!-- Кнопки основных функций -->
                <Button Text="📚 Мои тетради"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Arial"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#4A90E2"
                        HeightRequest="{OnPlatform iOS=85, Android=80, WinUI=90}"
                        MinimumWidthRequest="350"
                        CornerRadius="20"
                        Clicked="OnNotebooksClicked"
                        HorizontalOptions="Center" />

                <Button Text="⏰ Мои напоминания"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Arial"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#7B68EE"
                        HeightRequest="{OnPlatform iOS=85, Android=80, WinUI=90}"
                        MinimumWidthRequest="350"
                        CornerRadius="20"
                        Clicked="OnRemindersClicked"
                        HorizontalOptions="Center" />

                <Button Text="🔢 Калькулятор"
                        FontSize="{OnPlatform iOS=28, Android=26, WinUI=30}"
                        FontFamily="Arial"
                        FontAttributes="Bold"
                        TextColor="White"
                        BackgroundColor="#FF6B6B"
                        HeightRequest="{OnPlatform iOS=85, Android=80, WinUI=90}"
                        MinimumWidthRequest="350"
                        CornerRadius="20"
                        Clicked="OnCalculatorClicked"
                        HorizontalOptions="Center" />

                <!-- Мотивационный текст -->
                <Label Text="💪 Учись эффективно, достигай большего!" 
                       FontSize="{OnPlatform iOS=20, Android=18, WinUI=22}" 
                       FontFamily="Arial"
                       FontAttributes="Bold"
                       TextColor="#2E86AB"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,30,0,20" />

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
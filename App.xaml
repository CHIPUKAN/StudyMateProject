<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StudyMateTest"
             xmlns:converters="clr-namespace:StudyMateTest.Converters"
             x:Class="StudyMateTest.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:ToolToBackgroundColorConverter x:Key="ToolToBgConverter"/>
            <converters:BoolToBackgroundColorConverter x:Key="BoolToBgConverter"/>
            <converters:TextAlignmentConverter x:Key="TextAlignmentConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>

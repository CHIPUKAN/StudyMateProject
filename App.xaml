<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="StudyMateProject.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudyMateProject"
    xmlns:converters="clr-namespace:StudyMateProject.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:DatePastConverter x:Key="DatePastConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:TypeConverter x:Key="TypeConverter" />
            <converters:ColorConverter x:Key="ColorConverter" />
            <converters:ToolConverter x:Key="ToolConverter" />
            <converters:ExportCommandConverter x:Key="ExportCommandConverter" />
            <converters:CompletionStatusToBrushConverter x:Key="CompletionStatusToBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
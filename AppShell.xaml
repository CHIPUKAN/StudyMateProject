<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudyMateTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudyMateTest.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <!-- Напоминания -->
        <ShellContent
            Title="Напоминания"
            ContentTemplate="{DataTemplate local:ReminderPage}"
            Route="ReminderPage"
            Icon="bell.png" />

        <!-- Редактор заметок -->
        <ShellContent
            Title="Редактор заметок"
            ContentTemplate="{DataTemplate local:CombinedEditorPage}"
            Route="CombinedEditorPage"
            Icon="edit.png" />

        <!-- Графический редактор -->
        <ShellContent
            Title="Графический редактор"
            ContentTemplate="{DataTemplate local:DrawingPage}"
            Route="DrawingPage"
            Icon="draw.png" />
    </TabBar>
</Shell>
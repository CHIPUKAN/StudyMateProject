<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="StudyMateTest.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:StudyMateTest"
       xmlns:views="clr-namespace:StudyMateTest.Views"
       Title="StudyMate"
       FlyoutBackgroundColor="White"
       FlyoutBehavior="Flyout">

    <!-- Простой белый заголовок -->
    <Shell.FlyoutHeader>
        <Border BackgroundColor="White" 
                Padding="20"
                StrokeThickness="0">
            <StackLayout Spacing="10" 
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Padding="0,30,0,20">

                <Label Text="📚" 
                       FontSize="50"
                       HorizontalOptions="Center" />

                <Label Text="StudyMate" 
                       FontSize="32" 
                       FontFamily="Comic Sans MS"
                       FontAttributes="Bold"
                       TextColor="#4A90E2"
                       HorizontalOptions="Center" />

                <BoxView Color="#E2E8F0" 
                         HeightRequest="2" 
                         HorizontalOptions="FillAndExpand"
                         Margin="20,15,20,0" />

            </StackLayout>
        </Border>
    </Shell.FlyoutHeader>

    <!-- Глобальные стили для чистого белого Shell -->
    <Shell.Resources>
        <ResourceDictionary>

            <!-- Стиль для всего Shell -->
            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <Setter Property="Shell.BackgroundColor" Value="White" />
                <Setter Property="Shell.ForegroundColor" Value="#4A90E2" />
                <Setter Property="Shell.TitleColor" Value="#4A90E2" />
                <Setter Property="Shell.DisabledColor" Value="#CBD5E1" />
                <Setter Property="Shell.UnselectedColor" Value="#64748B" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="White" />
                <Setter Property="Shell.TabBarForegroundColor" Value="#4A90E2" />
                <Setter Property="Shell.TabBarTitleColor" Value="#4A90E2" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#64748B" />
            </Style>


            <!-- Стиль для контента Shell -->
            <Style TargetType="ShellContent">
                <Setter Property="Shell.BackgroundColor" Value="White" />
                <Setter Property="Shell.ForegroundColor" Value="#4A90E2" />
                <Setter Property="Shell.TitleColor" Value="#4A90E2" />
            </Style>

        </ResourceDictionary>
    </Shell.Resources>

    <!-- НАВИГАЦИЯ ПО ПРИЛОЖЕНИЮ -->

    <!-- Главная страница -->
    <FlyoutItem Title="🏠  Главная" 
                Route="MainPage">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <!-- Мои тетради -->
    <FlyoutItem Title="📚  Мои тетради" 
                Route="NotesListPage">
        <ShellContent ContentTemplate="{DataTemplate views:NotesListPage}" />
    </FlyoutItem>

    <!-- Напоминания -->
    <FlyoutItem Title="⏰  Напоминания" 
                Route="ReminderPage">
        <ShellContent ContentTemplate="{DataTemplate views:ReminderPage}" />
    </FlyoutItem>

    <!-- Калькулятор -->
    <FlyoutItem Title="🔢  Калькулятор" 
                Route="CalculatorPage">
        <ShellContent ContentTemplate="{DataTemplate views:CalculatorPage}" />
    </FlyoutItem>

</Shell>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudyMateTest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudyMateTest.Views"
    xmlns:views="clr-namespace:StudyMateTest.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Графический редактор"
        ContentTemplate="{DataTemplate local:ReminderPage}"
        Route="ReminderPage" />

    <FlyoutItem Title="Напоминания" Icon="bell.png">
        <ShellContent
        Title="Напоминания"
        ContentTemplate="{DataTemplate views:ReminderPage}"
        Route="ReminderPage" />
    </FlyoutItem>
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudyMateProject.Views.RemindersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:StudyMateProject.ViewModels"
    xmlns:models="clr-namespace:StudyMateProject.Models"
    x:DataType="viewmodels:RemindersViewModel"
    Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Добавить напоминание" Command="{Binding AddReminderCommand}" IconImageSource="icon_add_reminder.png" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*" ColumnDefinitions="*" Padding="10">
        <!-- Reminders List -->
        <RefreshView Command="{Binding LoadRemindersCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Reminders}" 
                          SelectedItem="{Binding SelectedReminder}" 
                          SelectionMode="Single"
                          SelectionChangedCommand="{Binding EditReminderCommand}"
                          SelectionChangedCommandParameter="{Binding SelectedReminder}">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="icon_empty_reminders.png" HeightRequest="100" WidthRequest="100" />
                        <Label Text="Напоминаний не найдено" FontSize="18" HorizontalOptions="Center" />
                        <Label Text="Создайте новое напоминание, чтобы начать" FontSize="14" HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Reminder">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Удалить"
                                             BackgroundColor="Red"
                                             IconImageSource="icon_delete.png"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:RemindersViewModel}}, Path=DeleteReminderCommand}"
                                             CommandParameter="{Binding Id}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="0,5,0,5" BorderColor="{DynamicResource Secondary}" CornerRadius="5" Padding="10">
                                <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto, Auto">
                                    <!-- Completed Checkbox -->
                                    <CheckBox Grid.Column="0" Grid.RowSpan="3" 
                                           IsChecked="{Binding IsCompleted}" 
                                           VerticalOptions="Center"
                                           CheckedChanged="OnReminderCompletedChanged"/>

                                    <!-- Reminder Title -->
                                    <Label Grid.Column="1" Grid.Row="0" 
                                         Text="{Binding Title}" 
                                         FontSize="18" 
                                         FontAttributes="Bold">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" 
                                                      Binding="{Binding IsCompleted}" 
                                                      Value="True">
                                                <Setter Property="TextDecorations" Value="Strikethrough" />
                                                <Setter Property="TextColor" Value="Gray" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <!-- Reminder Description -->
                                    <Label Grid.Column="1" Grid.Row="1" 
                                         Text="{Binding Description}" 
                                         FontSize="14"
                                         LineBreakMode="TailTruncation"
                                         MaxLines="2">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" 
                                                      Binding="{Binding IsCompleted}" 
                                                      Value="True">
                                                <Setter Property="TextColor" Value="Gray" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <!-- Due Date -->
                                    <Label Grid.Column="1" Grid.Row="2" 
                                         Text="{Binding DueDate, StringFormat='Срок: {0:g}'}" 
                                         FontSize="12" 
                                         TextColor="Gray">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label" 
                                                      Binding="{Binding DueDate, Converter={StaticResource DatePastConverter}}" 
                                                      Value="True">
                                                <Setter Property="TextColor" Value="Red" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>

                                    <!-- Priority Icon -->
                                    <Image Grid.Column="2" Grid.RowSpan="3"
                                         HeightRequest="30" 
                                         WidthRequest="30"
                                         Source="icon_reminder.png"
                                         VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyMateTest.Views.EditReminderPage"
             Title="Редактирование напоминания">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- Заголовок -->
            <Frame BackgroundColor="#6366F1" Padding="20" CornerRadius="12" HasShadow="True">
                <Label Text="✏️ Редактирование напоминания" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </Frame>

            <!-- Название -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="8" HasShadow="True">
                <StackLayout>
                    <Label Text="📝 Название" FontSize="16" FontAttributes="Bold" TextColor="#374151"/>
                    <Entry x:Name="TitleEntry" Placeholder="Введите название напоминания" FontSize="16" TextColor="#1F2937"/>
                </StackLayout>
            </Frame>

            <!-- Описание -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="8" HasShadow="True">
                <StackLayout>
                    <Label Text="📋 Описание" FontSize="16" FontAttributes="Bold" TextColor="#374151"/>
                    <Editor x:Name="MessageEditor" Placeholder="Добавьте подробности..." HeightRequest="80" FontSize="14" TextColor="#1F2937"/>
                </StackLayout>
            </Frame>

            <!-- Дата и время -->
            <Frame BackgroundColor="White" Padding="15" CornerRadius="8" HasShadow="True">
                <StackLayout>
                    <Label Text="⏰ Дата и время" FontSize="16" FontAttributes="Bold" TextColor="#374151" Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" Margin="0,0,5,0">
                            <Label Text="📅 Дата" FontSize="14" TextColor="#6B7280"/>
                            <DatePicker x:Name="ReminderDatePicker" Format="dd.MM.yyyy" FontSize="14" TextColor="#1F2937"/>
                        </StackLayout>

                        <StackLayout Grid.Column="1" Margin="5,0,0,0">
                            <Label Text="🕐 Время" FontSize="14" TextColor="#6B7280"/>
                            <TimePicker x:Name="ReminderTimePicker" Format="HH:mm" FontSize="14" TextColor="#1F2937"/>
                        </StackLayout>
                    </Grid>

                    <!-- Быстрые кнопки времени -->
                    <Label Text="Быстрый выбор времени:" FontSize="14" TextColor="#6B7280" Margin="0,10,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Text="09:00" FontSize="12" BackgroundColor="#F3F4F6" TextColor="#374151" Clicked="OnQuickTimeClicked" Margin="0,0,2,0"/>
                        <Button Grid.Column="1" Text="12:00" FontSize="12" BackgroundColor="#F3F4F6" TextColor="#374151" Clicked="OnQuickTimeClicked" Margin="2,0,2,0"/>
                        <Button Grid.Column="2" Text="15:00" FontSize="12" BackgroundColor="#F3F4F6" TextColor="#374151" Clicked="OnQuickTimeClicked" Margin="2,0,2,0"/>
                        <Button Grid.Column="3" Text="18:00" FontSize="12" BackgroundColor="#F3F4F6" TextColor="#374151" Clicked="OnQuickTimeClicked" Margin="2,0,0,0"/>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Предпросмотр -->
            <Frame BackgroundColor="#F8FAFC" Padding="15" CornerRadius="8" HasShadow="True">
                <StackLayout>
                    <Label Text="👁️ Предпросмотр" FontSize="16" FontAttributes="Bold" TextColor="#374151" Margin="0,0,0,10"/>
                    <Label x:Name="PreviewLabel" Text="Напоминание появится здесь..." FontSize="14" TextColor="#6B7280" LineBreakMode="WordWrap"/>
                </StackLayout>
            </Frame>

            <!-- Кнопки -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="❌ Отмена" FontSize="16" BackgroundColor="#6B7280" TextColor="White" Padding="15" Margin="0,0,5,0" Clicked="OnCancelClicked"/>
                <Button Grid.Column="1" Text="💾 Сохранить" FontSize="16" BackgroundColor="#10B981" TextColor="White" Padding="15" Margin="5,0,0,0" Clicked="OnSaveClicked"/>
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>